@using grupp6WebApp.Data
@using System.Security.Claims
@inject ApplicationDbContext Context

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Folio</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/grupp6WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header class="sticky-top bg-white shadow-sm">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light py-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/Folio.png" alt="Logotyp" style="height: 45px;" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark px-3 fw-medium" asp-controller="Project" asp-action="Index">Projekt</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark px-3" asp-controller="Search" asp-action="Index" title="Sök">
                                <i class="bi bi-search fs-5"></i>
                            </a>
                        </li>

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            var userIdClaim = User.FindFirstValue(ClaimTypes.NameIdentifier);
                            int unreadCount = 0;
                            if (userIdClaim != null)
                            {
                                int userId = int.Parse(userIdClaim);
                                unreadCount = Context.Messages.Count(m => m.ReceiverUserId == userId && !m.IsRead);
                            }

                            @* Inbox-ikonen med röd siffra *@
                            <li class="nav-item">
                                <a asp-controller="Message" asp-action="Inbox" class="nav-link position-relative px-3" title="Meddelanden">
                                    <i class="bi bi-envelope fs-4 text-dark"></i>
                                    @if (unreadCount > 0)
                                    {
                                        <span class="position-absolute translate-middle badge rounded-pill bg-danger"
                                              style="top: 15px; left: 80%; font-size: 0.6rem; padding: 0.25em 0.5em;">
                                            @unreadCount
                                        </span>
                                    }
                                </a>
                            </li>

                            @* Profil-dropdown *@
                            <li class="nav-item dropdown ms-lg-2">
                                <a class="nav-link dropdown-toggle d-flex align-items-center text-dark px-3" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle fs-4 text-primary"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2 rounded-3">
                                    <li><h6 class="dropdown-header uppercase small text-muted">Mitt Konto</h6></li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-controller="User" asp-action="Profile">
                                            <i class="bi bi-person me-2 text-primary"></i> Min Profil
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-page="/Manage/ChangePassword">
                                            <i class="bi bi-shield-lock me-2 text-primary"></i> Byt lösenord
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider opacity-25"></li>
                                    <li>
                                        <a class="dropdown-item py-2 text-danger fw-bold" asp-area="" asp-page="/Account/Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i> Logga ut
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            @* HÄR TOG VI BORT _MessageNotification SOM VISADE TEXTEN *@
                        }
                        else
                        {
                            <li class="nav-item ms-lg-3">
                                <a class="btn btn-primary btn-sm rounded-pill px-4 text-white fw-bold shadow-sm" asp-area="" asp-page="/Account/Login">Logga in</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4" style="min-height: 80vh;">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-dark bg-dark-soft text-light">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-4 mb-md-0">
                    <div class="d-flex align-items-center justify-content-center justify-content-md-start mb-3">
                        <img src="~/Images/Folio.png" alt="Folio Logotyp" style="height: 35px;" class="me-2" />
                        <h5 class="fw-bold mb-0 text-white">Folio</h5>
                    </div>
                    <p class="small text-light-muted">Din plattform för att visa upp projekt och knyta nya kontakter.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item px-2"><a asp-controller="Home" asp-action="Index" class="text-light text-decoration-none small">Start</a></li>
                        <li class="list-inline-item px-2"><a asp-controller="Project" asp-action="Index" class="text-light text-decoration-none small">Projekt</a></li>
                        <li class="list-inline-item px-2"><a asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-none small">Sekretess</a></li>
                    </ul>
                    <div class="mt-3 small text-light-muted">
                        &copy; 2026 Folio. Alla rättigheter förbehållna.
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>