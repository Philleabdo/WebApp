@model grupp6WebApp.Models.SearchResultsViewModel
@{
    ViewData["Title"] = "Sök projekt och personer";
}

<div class="container py-4">
    <div class="text-center mb-5">
        <h1 class="fw-bold display-5">Sök i portalen</h1>
        <p class="text-muted fs-5">Hitta projekt, innovativa idéer och kompetenta kollegor</p>
    </div>

    @* Sökfältet *@
    <div class="row justify-content-center mb-5">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 p-2 rounded-pill bg-white">
                <form method="get" class="d-flex align-items-center px-2">
                    <input type="text" name="q" value="@Model.Query"
                           class="form-control border-0 bg-transparent py-3 ps-3 shadow-none"
                           placeholder="Sök på namn, kompetens, titel..." />
                    <button type="submit" class="btn btn-primary rounded-pill px-4 py-2 fw-bold">Sök</button>
                </form>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Query))
    {
        <div class="mb-4 text-center">
            <h4 class="text-secondary fw-light">
                Resultat för <span class="text-dark fw-bold italic">"@Model.Query"</span>
            </h4>
        </div>

        @if (!Model.Projects.Any() && !Model.Users.Any())
        {
            <div class="card shadow-sm border-0 p-5 text-center bg-white rounded-4">
                <p class="text-muted fs-5 mb-0">Tyvärr hittade vi inga matchningar för din sökning.</p>
            </div>
        }
        else
        {
            <div class="row">
                @* --- VÄNSTER KOLUMN: PROJEKT --- *@
                <div class="col-lg-6 mb-5">
                    <h3 class="mb-4 fw-bold"><i class="bi bi-code-slash text-success"></i> Projekt (@Model.Projects.Count)</h3>
                    <div class="row g-3">
                        @foreach (var p in Model.Projects)
                        {
                            <div class="col-12">
                                <div class="card h-100 shadow-sm border-0 position-relative">
                                    <div class="card-body p-4">
                                        <span class="badge bg-light text-success rounded-pill px-3 py-1 mb-2 fw-bold" style="font-size: 0.7rem;">Projekt</span>
                                        <h5 class="fw-bold">@p.Title</h5>
                                        <p class="text-secondary small mb-0">
                                            @(p.Description?.Length > 100 ? p.Description.Substring(0, 100) + "..." : p.Description)
                                        </p>
                                        <a asp-controller="Project" asp-action="Details" asp-route-id="@p.ProjectId"
                                           class="stretched-link"></a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                @* --- HÖGER KOLUMN: PERSONER --- *@
                <div class="col-lg-6 mb-5">
                    <h3 class="mb-4 fw-bold"><i class="bi bi-people-fill text-primary"></i> Personer (@Model.Users.Count)</h3>
                    <div class="row g-3">
                        @foreach (var user in Model.Users)
                        {
                            <div class="col-12">
                                <div class="card h-100 shadow-sm border-0 position-relative">
                                    <div class="card-body p-3 d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(user.Profile?.ProfilePictureUrl))
                                        {
                                            <img src="@user.Profile.ProfilePictureUrl" class="rounded-circle me-3"
                                                 style="width: 60px; height: 60px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <img src="/images/default-profile.png" class="rounded-circle me-3" style="width: 60px;" />
                                        }

                                        <div class="flex-grow-1">
                                            <span class="badge bg-light text-primary rounded-pill px-3 py-1 mb-1 fw-bold" style="font-size: 0.7rem;">Profil</span>
                                            <h5 class="fw-bold mb-0">@user.FirstName @user.LastName</h5>
                                            <small class="text-muted">@(user.Profile?.Category ?? "Medlem")</small>
                                        </div>
                                        <a asp-controller="User" asp-action="PublicProfile" asp-route-id="@user.UserId"
                                           class="stretched-link"></a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>