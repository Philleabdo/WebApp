@model grupp6WebApp.Models.Project
@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 p-4 p-md-5 bg-white">

                <div class="mb-4">
                    <span class="badge bg-primary-subtle text-primary mb-2">Projektinformation</span>
                    <h1 class="fw-bold text-dark">@Model.Title</h1>
                    <p class="text-muted"><i class="bi bi-calendar3 me-2"></i>Publicerat: @Model.CreatedDate.ToShortDateString()</p>
                </div>

                <hr class="opacity-25 mb-4">

                <div class="mb-4">
                    <h5 class="fw-bold mb-3">Beskrivning</h5>
                    <p class="text-secondary" style="line-height: 1.6;">
                        @(string.IsNullOrEmpty(Model.Description) ? "Ingen beskrivning tillgänglig." : Model.Description)
                    </p>
                </div>

                <div class="p-3 rounded-3 bg-light border-0 mb-5">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <i class="bi bi-person-badge text-primary fs-2"></i>
                        </div>
                        <div class="col">
                            <p class="mb-0 small text-muted uppercase fw-semibold">Projektansvarig</p>
                            <h6 class="mb-0 fw-bold">
                                @if (Model.User != null)
                                {
                                    @($"{Model.User.FirstName} {Model.User.LastName}")
                                }
                                else
                                {
                                    <span>Okänd användare</span>
                                }
                            </h6>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-3">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 fw-bold">
                        <i class="bi bi-arrow-left me-2"></i>Tillbaka
                    </a>
                    @if (Model.ProjectUrl != null)
                    {
                        <a href="@Model.ProjectUrl" target="_blank" class="btn btn-primary rounded-pill px-4 fw-bold">
                            Visa Projekt <i class="bi bi-box-arrow-up-right ms-2"></i>
                        </a>
                    }
                </div>

            </div>
        </div>
    </div>
</div>