@model grupp6WebApp.Models.Project
@using System.Security.Claims
@{
    ViewData["Title"] = Model.Title;
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="container py-5">
    <div class="row g-4 justify-content-center">
        @* Vänster sida: Projektinfo *@
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 p-4 p-md-5 bg-white h-100">

                <div class="mb-4">
                    <span class="badge bg-primary-subtle text-primary mb-2">Projektinformation</span>
                    <h1 class="fw-bold text-dark">@Model.Title</h1>
                    <p class="text-muted"><i class="bi bi-calendar3 me-2"></i>Publicerat: @Model.CreatedDate.ToShortDateString()</p>
                </div>

                <hr class="opacity-25 mb-4">

                <div class="mb-4">
                    <h5 class="fw-bold mb-3">Beskrivning</h5>
                    <p class="text-secondary" style="line-height: 1.6; white-space: pre-wrap;">
                        @(string.IsNullOrEmpty(Model.Description) ? "Ingen beskrivning tillgänglig." : Model.Description)
                    </p>
                </div>

                <div class="p-3 rounded-3 bg-light border-0 mb-5">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <i class="bi bi-person-badge text-primary fs-2"></i>
                        </div>
                        <div class="col">
                            <p class="mb-0 small text-muted uppercase fw-semibold">Ursprunglig skapare</p>
                            <h6 class="mb-0 fw-bold">
                                @if (Model.User != null)
                                {
                                    @($"{Model.User.FirstName} {Model.User.LastName}")
                                }
                                else
                                {
                                    <span>Okänd användare</span>
                                }
                            </h6>
                        </div>
                    </div>
                </div>

                <div class="d-flex flex-wrap gap-3">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 fw-bold">
                        <i class="bi bi-arrow-left me-2"></i>Tillbaka
                    </a>

                    @* Visa endast Redigera-knappen för skaparen *@
                    @if (Model.UserId.ToString() == currentUserId)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.ProjectId" class="btn btn-warning rounded-pill px-4 fw-bold">
                            <i class="bi bi-pencil me-2"></i>Redigera
                        </a>
                    }

                    @if (!string.IsNullOrEmpty(Model.ProjectUrl))
                    {
                        <a href="@Model.ProjectUrl" target="_blank" class="btn btn-primary rounded-pill px-4 fw-bold">
                            Visa Projekt <i class="bi bi-box-arrow-up-right ms-2"></i>
                        </a>
                    }
                </div>
            </div>
        </div>

        @* Höger sida: Medlemmar/Deltagare *@
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 p-4 bg-light-blue-subtle h-100">
                <h5 class="fw-bold mb-4 text-dark"><i class="bi bi-people-fill me-2 text-primary"></i>Deltagare</h5>
                <p class="small text-muted mb-3">Användare som har detta projekt på sin profil:</p>

                <div class="list-group list-group-flush bg-transparent">
                    @if (Model.UsersWhoDisplay != null && Model.UsersWhoDisplay.Any())
                    {
                        foreach (var collaborator in Model.UsersWhoDisplay)
                        {
                            <a asp-controller="User" asp-action="PublicProfile" asp-route-id="@collaborator.UserId"
                               class="list-group-item list-group-item-action bg-transparent border-0 px-0 d-flex align-items-center">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 35px; height: 35px; font-size: 0.8rem;">
                                    @collaborator.FirstName[0]@collaborator.LastName[0]
                                </div>
                                <span class="fw-semibold">@collaborator.FirstName @collaborator.LastName</span>
                            </a>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-info-circle text-muted fs-2 mb-2"></i>
                            <p class="text-muted small">Inga andra användare har lagt till detta projekt ännu.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>