@model grupp6WebApp.Models.CVViewModel

@{
    ViewData["Title"] = "My Profile";
}

@* Visa framgångsmeddelande om man sparat *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-5">
    <div class="row">
        @* Vänster kolumn: Bild, basinfo och VIEWCOUNT *@
        <div class="col-md-4 text-center">
            @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
            {
                <img src="@Model.ProfilePictureUrl" class="img-fluid rounded-circle shadow" style="width: 200px; height: 200px; object-fit: cover;" alt="Profile Picture" />
            }
            else
            {
                <img src="/images/default-profile.png" class="img-fluid rounded-circle shadow" style="width: 200px;" alt="Default Picture" />
            }
            <h2 class="mt-3">@Model.FirstName @Model.LastName</h2>
            <p class="text-muted">@Model.Email</p>

            @* --- HÄR LÄGGER VI TILL VIEWCOUNT --- *@
            <div class="mb-3">
                <span class="badge bg-light text-dark border">
                    <i class="bi bi-eye-fill text-primary"></i> <strong>@Model.ViewCount</strong> profilvisningar
                </span>
            </div>
            @* ------------------------------------ *@

            <p><i class="bi bi-geo-alt"></i> @Model.Address</p>

            <div class="d-grid gap-2 mt-3">
                <a asp-action="Edit" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i> Edit Profile
                </a>

                <a asp-action="DownloadXml" class="btn btn-outline-secondary">
                    <i class="bi bi-file-earmark-code"></i> Download as XML
                </a>

                @* --- NY KNAPP: DEACTIVATE ACCOUNT --- *@
                <form asp-action="DeactivateAccount" method="post" class="mt-5"
                      onsubmit="return confirm('Är du helt säker på att du vill avaktivera ditt konto? Du kommer att loggas ut och inte kunna logga in igen förrän kontot aktiveras på nytt.');">
                    <button type="submit" class="btn btn-danger w-100">
                        <i class="bi bi-person-x-fill"></i> Deactivate My Account
                    </button>
                </form>
                @* ------------------------------------ *@
            </div>
        </div> @* Här slutar col-md-4 *@

        @* Höger kolumn: CV-detaljer *@
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="text-primary border-bottom pb-2">About Me</h4>
                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <p class="lead" style="white-space: pre-wrap;">@Model.Bio</p>
                    }
                    else
                    {
                        <p class="text-muted italic">No bio added yet. Click Edit to tell us about yourself!</p>
                    }
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="text-primary border-bottom pb-2">Skills</h4>
                    <p>@Model.Skills</p>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="text-primary border-bottom pb-2">Education & Experience</h4>
                    <h5>Education</h5>
                    <p>@Model.Education</p>
                    <hr />
                    <h5>Work Experience</h5>
                    <p>@Model.Experience</p>
                </div>
            </div>

            @* Projekt-sektionen *@
            <div class="card shadow-sm mb-4 border-info">
                <div class="card-body">
                    <h4 class="text-info border-bottom pb-2">Projects</h4>
                    @if (Model.Projects != null && Model.Projects.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var project in Model.Projects)
                            {
                                <li class="list-group-item">@project</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted small italic">No projects added yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>