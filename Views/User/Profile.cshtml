@model grupp6WebApp.Models.CVViewModel

@{
    ViewData["Title"] = "Min Profil";
}

@* CSS-fix för att säkerställa noll rörelse *@
<style>
    .static-card {
        transition: none !important;
        transform: none !important;
    }

        .static-card:hover {
            transform: none !important;
            box-shadow: 0 .125rem .25rem rgba(0,0,0,.075) !important;
        }

    .project-item {
        transition: background-color 0.2s ease;
    }

        .project-item:hover {
            background-color: #f1f3f5 !important;
        }
</style>

<div class="container py-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4">
        @* VÄNSTER KOLUMN: Profilinformation *@
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 text-center p-4 bg-white sticky-lg-top static-card" style="top: 100px; z-index: 10;">
                <div class="mx-auto mb-4">
                    @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                    {
                        <img src="@Model.ProfilePictureUrl" class="rounded-circle shadow-sm border border-4 border-white" style="width: 180px; height: 180px; object-fit: cover;" alt="Profilbild" />
                    }
                    else
                    {
                        <img src="/images/default-profile.png" class="rounded-circle shadow-sm border border-4 border-white" style="width: 180px;" alt="Standardbild" />
                    }
                </div>

                <h2 class="fw-bold mb-1">@Model.FirstName @Model.LastName</h2>
                <p class="text-muted small mb-3">@Model.Email</p>

                <div class="mb-4">
                    <span class="badge bg-light text-dark border px-3 py-2 rounded-pill shadow-none">
                        <i class="bi bi-eye-fill text-primary me-1"></i> <strong>@Model.ViewCount</strong> visningar
                    </span>
                </div>

                <div class="text-start mb-4 bg-light p-3 rounded-3">
                    <p class="small mb-0 text-secondary"><i class="bi bi-geo-alt text-primary me-2"></i>@Model.Address</p>
                </div>

                <div class="d-grid gap-2">
                    <a asp-action="Edit" class="btn btn-primary rounded-pill fw-bold py-2 shadow-sm">
                        <i class="bi bi-pencil-square me-2"></i> Redigera Profil
                    </a>

                    @* XML-knappen anropar nu metoden DownloadXml *@
                    <a asp-action="DownloadXml" class="btn btn-outline-secondary rounded-pill py-2 small fw-bold shadow-none">
                        <i class="bi bi-file-earmark-code me-2"></i> Ladda ner XML
                    </a>

                    <form asp-action="DeactivateAccount" method="post" class="mt-3"
                          onsubmit="return confirm('Är du helt säker på att du vill avaktivera ditt konto?');">
                        <button type="submit" class="btn btn-link text-danger small text-decoration-none opacity-75 shadow-none">
                            <i class="bi bi-person-x me-1"></i> Avaktivera mitt konto
                        </button>
                    </form>
                </div>
            </div>
        </div>

        @* HÖGER KOLUMN: CV-DETALJER *@
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4 bg-white p-4 static-card">
                <h4 class="fw-bold mb-4 text-dark border-bottom pb-2">Om mig</h4>
                <p class="text-secondary lh-lg mb-0" style="white-space: pre-wrap;">@(string.IsNullOrEmpty(Model.Bio) ? "Ingen bio tillagd." : Model.Bio)</p>
            </div>

            <div class="card shadow-sm border-0 mb-4 bg-white p-4 static-card">
                <h4 class="fw-bold mb-4 text-dark border-bottom pb-2">Kompetenser</h4>
                <div class="d-flex flex-wrap gap-2">
                    @if (!string.IsNullOrEmpty(Model.Skills))
                    {
                        @foreach (var skill in Model.Skills.Split(','))
                        {
                            <span class="badge bg-light text-primary border border-primary-subtle px-3 py-2 rounded-pill fw-medium">@skill.Trim()</span>
                        }
                    }
                    else
                    {
                        <p class="text-muted small fst-italic mb-0">Inga kompetenser tillagda.</p>
                    }
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4 bg-white p-4 static-card">
                <h4 class="fw-bold mb-4 text-dark border-bottom pb-2">Erfarenhet & Utbildning</h4>
                <div class="mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-mortarboard text-primary me-2 fs-5"></i>
                        <h6 class="fw-bold text-dark mb-0">Utbildning</h6>
                    </div>
                    <p class="text-secondary ps-4">@(string.IsNullOrEmpty(Model.Education) ? "Information saknas." : Model.Education)</p>
                </div>
                <div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-briefcase text-primary me-2 fs-5"></i>
                        <h6 class="fw-bold text-dark mb-0">Arbetslivserfarenhet</h6>
                    </div>
                    <p class="text-secondary ps-4 mb-0">@(string.IsNullOrEmpty(Model.Experience) ? "Information saknas." : Model.Experience)</p>
                </div>
            </div>

            <div class="card shadow-sm border-0 bg-white p-4 border-top border-primary border-4 static-card">
                <h4 class="fw-bold mb-4 text-dark border-bottom pb-2">Utvalda Projekt</h4>
                @if (Model.Projects != null && Model.Projects.Any())
                {
                    <div class="row g-3">
                        @foreach (var project in Model.Projects)
                        {
                            <div class="col-md-6">
                                <div class="p-3 border rounded-3 bg-light d-flex align-items-center project-item">
                                    <i class="bi bi-journal-code text-primary fs-4 me-3"></i>
                                    <span class="fw-bold text-dark">@project</span>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted small fst-italic mb-0">Inga projekt länkade än.</p>
                }
            </div>
        </div>
    </div>
</div>