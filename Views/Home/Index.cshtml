@model grupp6WebApp.Models.HomeIndexViewModel
@{
    ViewData["Title"] = "Startsida";
}

<div class="text-center mb-5">
    <h1 class="display-4">Välkommen till Grupp 6 Portal</h1>
    <p>Här hittar du våra senaste projekt och kompetenser.</p>
</div>

@* --- NY SEKTION: FÖRESLAGNA PROFILER --- *@
<div class="container mb-5">
    <h2 class="mb-4">Föreslagna profiler</h2>
    <div class="row">
        @if (Model.SuggestedUsers != null && Model.SuggestedUsers.Any())
        {
            @foreach (var user in Model.SuggestedUsers)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 text-center p-3 static-card">
                        <div class="d-flex justify-content-center">
                            @if (!string.IsNullOrEmpty(user.Profile?.ProfilePictureUrl))
                            {
                                <img src="@user.Profile.ProfilePictureUrl" class="rounded-circle shadow-sm"
                                     style="width: 120px; height: 120px; object-fit: cover;" alt="Profilbild" />
                            }
                            else
                            {
                                @* HÄR HAR VI UPPDATERAT TILL DIN NYA STANDARDBILD *@
                                <img src="/images/FolioAccountPofile.png" class="rounded-circle shadow-sm"
                                     style="width: 120px; height: 120px; object-fit: cover;" alt="Standardbild" />
                            }
                        </div>
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@user.FirstName @user.LastName</h5>
                            <p class="text-primary mb-3">@(user.Profile?.Category ?? "Medlem")</p>

                            <a asp-controller="User" asp-action="PublicProfile" asp-route-id="@user.UserId" class="btn btn-primary rounded-pill w-100 fw-bold shadow-sm">
                                Visa profil
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-muted italic">
                <p>Inga offentliga profiler hittades ännu.</p>
            </div>
        }
    </div>
</div>

<hr class="my-5 opacity-25" />

@* --- PROJEKT-SEKTION --- *@
<div class="container pb-5">
    <h2 class="mb-4">Senaste projekten</h2>
    <div class="row">
        @if (Model.LatestProjects != null && Model.LatestProjects.Any())
        {
            @foreach (var p in Model.LatestProjects)
            {
                <div class="col-md-4 mb-3">
                    <div class="card h-100 shadow-sm border-0 bg-white static-card">
                        <div class="card-body">
                            <h5 class="card-title fw-bold text-dark">@p.Title</h5>
                            <p class="card-text text-secondary">
                                @(p.Description?.Length > 100 ? p.Description.Substring(0, 100) + "..." : p.Description)
                            </p>
                        </div>
                        <div class="card-footer bg-white border-top-0 pb-4">
                            <a asp-controller="Project" asp-action="Details" asp-route-id="@p.ProjectId" class="btn btn-outline-primary w-100 rounded-pill fw-bold">Läs mer</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info border-0 shadow-sm">
                    Inga projekt hittades i databasen.
                    <a asp-controller="Project" asp-action="Create" class="fw-bold">Skapa det första projektet!</a>
                </div>
            </div>
        }
    </div>
</div>