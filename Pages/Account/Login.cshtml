@page
@model grupp6WebApp.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Logga in";
}

<div class="row justify-content-center py-5">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow-sm border-0 p-4 p-md-5 bg-white no-hover">
            <h2 class="fw-bold text-center mb-4 text-dark">Logga in</h2>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger border-0 rounded-3 shadow-sm">@Model.ErrorMessage</div>
            }

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label fw-medium text-secondary small uppercase">E-post</label>
                    <input asp-for="Input.Email" class="form-control form-control-lg bg-light border-0" placeholder="namn@mail.se" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label fw-medium text-secondary small uppercase">Lösenord</label>
                    <input asp-for="Input.Password" class="form-control form-control-lg bg-light border-0" type="password" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="form-check mb-4">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label small text-muted">Kom ihåg mig på denna enhet</label>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold shadow-sm transition-all">Logga in</button>
            </form>

            <div class="text-center mt-4 pt-3 border-top">
                <span class="text-muted small">Inget konto än?</span>
                <a asp-page="/Account/Register" class="text-primary fw-bold text-decoration-none small ms-1">Skapa konto</a>
            </div>
        </div>
    </div>
</div>