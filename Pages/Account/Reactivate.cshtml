@page
@model grupp6WebApp.Pages.Account.ReactivateModel
@{
    ViewData["Title"] = "Återaktivera konto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow border-0">
                <div class="card-body p-5">
                    @* En snygg ikon *@
                    <i class="bi bi-person-check text-primary" style="font-size: 4rem;"></i>

                    <h2 class="mt-4">Välkommen tillbaka!</h2>
                    <p class="text-muted lead">
                        Ditt konto är för närvarande inaktiverat. Vill du återaktivera det för att kunna logga in och se din profil?
                    </p>

                    <form method="post">
                        @* Vi gömmer användar-id:t här så vi vet vem vi ska aktivera *@
                        <input type="hidden" asp-for="UserId" />

                        <button type="submit" class="btn btn-primary btn-lg w-100 mt-4 shadow-sm">
                            <i class="bi bi-unlock-fill"></i> Ja, återaktivera mitt konto
                        </button>
                    </form>

                    <a asp-controller="Home" asp-action="Index" class="btn btn-link mt-3 text-secondary">
                        Nej tack, ta mig till startsidan
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>