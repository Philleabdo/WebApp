@page
@model grupp6WebApp.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Skapa konto";
}

<div class="row justify-content-center py-5">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 p-4 p-md-5 bg-white">
            <h2 class="fw-bold text-center mb-2 text-dark">Bli medlem</h2>
            <p class="text-center text-muted mb-4 small">Fyll i dina uppgifter för att börja skapa din profil</p>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger border-0 rounded-3 shadow-sm">@Model.ErrorMessage</div>
            }

            <form method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Input.FirstName" class="form-label fw-medium text-secondary small uppercase">Förnamn</label>
                        <input asp-for="Input.FirstName" class="form-control bg-light border-0" />
                        <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Input.LastName" class="form-label fw-medium text-secondary small uppercase">Efternamn</label>
                        <input asp-for="Input.LastName" class="form-control bg-light border-0" />
                        <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Address" class="form-label fw-medium text-secondary small uppercase">Adress</label>
                    <input asp-for="Input.Address" class="form-control bg-light border-0" />
                    <span asp-validation-for="Input.Address" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label fw-medium text-secondary small uppercase">E-post</label>
                    <input asp-for="Input.Email" class="form-control bg-light border-0" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Input.Password" class="form-label fw-medium text-secondary small uppercase">Lösenord</label>
                        <input asp-for="Input.Password" type="password" class="form-control bg-light border-0" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label asp-for="Input.ConfirmPassword" class="form-label fw-medium text-secondary small uppercase">Bekräfta</label>
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control bg-light border-0" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold shadow-sm transition-all">Skapa mitt konto</button>
            </form>
        </div>
    </div>
</div>