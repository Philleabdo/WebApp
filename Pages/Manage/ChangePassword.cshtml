@page
@model grupp6WebApp.Pages.Manage.ChangePasswordModel
@{
    ViewData["Title"] = "Byt lösenord";
}

<div class="row justify-content-center py-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0 p-4 p-md-5 bg-white no-hover">
            <div class="text-center mb-4">
                <i class="bi bi-shield-lock text-primary display-4"></i>
                <h2 class="fw-bold mt-2">Byt lösenord</h2>
                <p class="text-muted small">Välj ett starkt lösenord för att hålla ditt konto säkert</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success border-0 shadow-sm mb-4">
                    <i class="bi bi-check-circle me-2"></i> @Model.SuccessMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger border-0 shadow-sm mb-4">
                    <i class="bi bi-exclamation-triangle me-2"></i> @Model.ErrorMessage
                </div>
            }

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Input.CurrentPassword" class="form-label fw-semibold text-secondary uppercase small">Nuvarande lösenord</label>
                    <input asp-for="Input.CurrentPassword" class="form-control form-control-lg bg-light border-0" type="password" placeholder="••••••••" />
                    <span asp-validation-for="Input.CurrentPassword" class="text-danger small"></span>
                </div>

                <hr class="my-4 opacity-25">

                <div class="mb-3">
                    <label asp-for="Input.NewPassword" class="form-label fw-semibold text-secondary uppercase small">Nytt lösenord</label>
                    <input asp-for="Input.NewPassword" class="form-control form-control-lg bg-light border-0" type="password" placeholder="••••••••" />
                    <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold text-secondary uppercase small">Bekräfta nytt lösenord</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg bg-light border-0" type="password" placeholder="••••••••" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="d-flex gap-3">
                    <button type="submit" class="btn btn-primary rounded-pill px-5 py-3 fw-bold flex-grow-1 shadow-sm transition-all">Spara ändringar</button>
                    <a asp-page="/Index" class="btn btn-outline-secondary rounded-pill px-4 py-3 fw-bold">Avbryt</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
